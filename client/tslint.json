{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier", "tslint-plugin-prettier", "tslint-etc"],
    "jsRules": {},
    "rules": {
        "prettier": [true, ".prettierrc"],
        "quotemark": [true, "jsx-double"],
        "jsx-no-multiline-js": false,
        "no-console": [false, "warning"],
        "interface-name": false,
        "object-literal-sort-keys": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": "never"
            }
        ],
        "ordered-imports": true,
        "max-line-length": [
            true,
            {
                "limit": 120,
                "ignore-pattern": "^import | ^export {(.*?)} | // | class [a-zA-Z]+ implements | console.log | http?",
                "check-strings": true,
                "check-regex": true
            }
        ],
        "no-empty-interface": false,
        "no-unused-declaration": true
    },
    "rulesDirectory": [],
    "exclude": ["node_modules"]
}
